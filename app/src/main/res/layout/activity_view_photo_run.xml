<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/run_titleTextView"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/text_box"
        android:hint="Title"
        android:paddingLeft="5dp"
        android:paddingTop="10dp" />
    <TextView
        android:id="@+id/photorun_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/photo_logo"
        android:layout_marginTop="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:paddingTop="10dp"
        android:paddingLeft="5dp" />

    <TextView
        android:id="@+id/max_participatorsTextView"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="60dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:text="(Max. Part.)"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/ownerTextView"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:text="(Owner)"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/text_box"
        android:hint="Date"
        android:paddingLeft="5dp"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/starting_timeTextView"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/text_box"
        android:hint="Date"
        android:paddingLeft="5dp"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/estimated_durationTextView"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/text_box"
        android:hint="duration"
        android:paddingLeft="5dp"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/start_pointTextView"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/text_box"
        android:hint="start"
        android:paddingLeft="5dp"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/end_pointTextView"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/text_box"
        android:hint="destination"
        android:paddingLeft="5dp"
        android:paddingTop="10dp" />
    <TextView
        android:id="@+id/maps"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="190dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/text_box"
        android:hint="Google Maps"
        android:paddingTop="5dp"
        android:paddingLeft="10dp" />

    <TextView
        android:id="@+id/descriptionTV"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/text_box"
        android:hint="description"
        android:paddingLeft="10dp"
        android:paddingTop="5dp" />
    <android.support.v7.widget.AppCompatButton
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="20dp"
        android:transitionName="login"
        android:layout_gravity="center"
        android:text="Visit attendee list"
        android:textSize="12dp"
        android:id="@+id/attendee_list"
        android:padding="10dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:background="@drawable/orange_rounded_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/JoinButton"
        android:layout_width="85dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/orange_rounded_button"
        android:padding="12dp"
        android:text="Join Run"
        android:textSize="12dp"
        android:transitionName="login" />
</RelativeLayout>



