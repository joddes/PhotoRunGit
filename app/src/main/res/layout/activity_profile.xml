    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:hint="Street with House Nr, ZIP Code Town"
        android:layout_below="@id/name"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/role"
        android:hint="Photographer"
        android:layout_below="@+id/user_profil_photo"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mail"
        android:layout_marginTop="15dp"
        android:hint="janixboy@outlook.de"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"
        android:layout_below="@+id/top_bar"
        android:layout_toLeftOf="@+id/phonenumber"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phonenumber"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:hint="015778844436"
        android:textColor="@color/white"
        android:layout_below="@+id/top_bar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/personal_information"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:hint="Hobbies and Interests are breakdance hpe uni sport blalabalahslohjdjudjdjdjdj"
        android:layout_below="@+id/address"
        android:layout_centerHorizontal="true"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/profile_settings_icon"
        android:id="@+id/goToSettings"
        android:src="@drawable/profile_settings_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="67dp" />


    <include layout="@layout/layout_top_bar"/>
    <include layout="@layout/layout_bottom_navigation" />
    <include layout="@layout/help_seite"
        android:id="@+id/include" />
</RelativeLayout>
