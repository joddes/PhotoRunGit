<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.janda.photorun.Photorun.CreateRun">


    <TextView
        android:id="@+id/create_photowalk"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Create Photowalk"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />


    <ImageView
        android:layout_width="207dp"
        android:layout_height="75dp"
        android:src="@drawable/photo_logo"
        android:layout_gravity="center"
        android:id="@+id/logo"
        tools:layout_editor_absoluteY="54dp"
        tools:layout_editor_absoluteX="-24dp" />

<android.support.design.widget.TextInputLayout
android:layout_width="0dp"
android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/run_title"
        android:layout_width="240dp"
        android:layout_height="39dp"
        android:hint="Add title..."
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="71dp" />

    <TextView
    android:id="@+id/description"
    android:layout_width="117dp"
    android:layout_height="39dp"
    android:layout_gravity="center_horizontal"
    android:text="Description"
    android:textSize="20sp"
    android:textAppearance="?android:attr/textAppearanceLarge"
    tools:layout_editor_absoluteX="16dp"
    tools:layout_editor_absoluteY="129dp" />

    <EditText
        android:id="@+id/description_box"
        android:layout_width="368dp"
        android:layout_height="93dp"
        android:background="@drawable/text_box"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="158dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="63dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:text="Date"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="264dp" />

    <EditText
    android:id="@+id/date_box"
    android:layout_width="130dp"
    android:layout_height="30dp"
    android:background="@drawable/text_box"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="289dp" />

    <EditText
        android:id="@+id/time_box"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:background="@drawable/text_box"
        tools:layout_editor_absoluteX="246dp"
        tools:layout_editor_absoluteY="289dp" />

    <TextView
        android:id="@+id/location"
        android:layout_width="83dp"
        android:layout_height="28dp"
        android:layout_gravity="center_horizontal"
        android:text="Location"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="330dp" />

    <EditText
        android:id="@+id/start_point"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:hint="  starting point..."
        android:textSize="15dp"
        android:background="@drawable/text_box"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="358dp" />

    <EditText
        android:id="@+id/end_point"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:hint="  destination..."
        android:textSize="15dp"
        android:background="@drawable/text_box"
        tools:layout_editor_absoluteX="246dp"
        tools:layout_editor_absoluteY="358dp" />




</android.support.constraint.ConstraintLayout>